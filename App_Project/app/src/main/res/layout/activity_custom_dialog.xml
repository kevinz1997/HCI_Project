<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="San abc"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="6"
            android:text="Chọn ngày: "
            android:textColor="#000"
            android:textSize="18dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            app:cardBackgroundColor="#aab0ff"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/txtDateDialog"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColor="#FFF7ECEC"
                android:textSize="20dp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="6"
            android:text="Giờ bắt đầu: "
            android:textColor="#000"
            android:textSize="18dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            app:cardBackgroundColor="#aab0ff"
            app:cardCornerRadius="10dp">

            <Spinner
                android:id="@+id/startHourDialog"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="10dp"></Spinner>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="6"
            android:text="Giờ kết thúc: "
            android:textColor="#000"
            android:textSize="18dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            app:cardBackgroundColor="#aab0ff"
            app:cardCornerRadius="10dp">

            <Spinner
                android:id="@+id/endHourDialog"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_margin="10dp"></Spinner>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="6"
            android:text="Loại sân: "
            android:textColor="#000"
            android:textSize="18dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            app:cardBackgroundColor="#aab0ff"
            app:cardCornerRadius="10dp">

            <Spinner
                android:id="@+id/numberPitchDialog"
                android:layout_width="match_parent"
                android:layout_height="40dp"></Spinner>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="6"
            android:text="Cáp kèo: "
            android:textColor="#000"
            android:textSize="18dp" />

        <CheckBox
            android:id="@+id/bitCapkeoDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="4"
            android:theme="@style/MyCheckBox2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="6"
            android:text="Tổng tiền: "
            android:textColor="#000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="200.000 VNĐ"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_weight="4"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:weightSum="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btnCancelDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="HỦY"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/btnUpdateDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CẬP NHẬT"
            android:textSize="17dp" />
    </LinearLayout>
</LinearLayout>
